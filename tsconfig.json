{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "rootDirs": ["src", "site"],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6"
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "include": ["src/**/*.ts"],
  "exclude": []
}